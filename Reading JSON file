import json

data = {}
data['people'] = []
data['people'].append({
    'name': 'XYZ',
    'website': 'xyz',
    'from': 'XYZ'
})
data['people'].append({
    'name': 'PQR',
    'website': 'pqr',
    'from': 'PQR'
})
data['people'].append({
    'name': 'ABC',
    'website': 'abc',
    'from': 'ABC'
})

with open('data.txt', 'w') as outfile:
    json.dump(data, outfile)
